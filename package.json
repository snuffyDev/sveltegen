{
	"name": "sveltegen",
	"version": "1.3.0",
	"description": "A simple component generator CLI for Svelte/SvelteKit.",
	"main": "./dist/index.js",
	"scripts": {
		"start": "nodemon -I --watch 'src/**/*.ts' --exec ts-node src/index.ts",
		"refresh": "shx rm -rf ./node_modules ./package-lock.json && npm install",
		"build": "shx rm -rf dist && tsc -p . && shx cp -r src/templates dist && shx rm dist/templates/route/index.d.ts"
	},
	"bin": {
		"sveltegen": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"cli",
		"generator",
		"svelte",
		"sveltekit",
		"component",
		"utility"
	],
	"author": "snuffydev",
	"license": "ISC",
	"dependencies": {
		"chalk": "^4.1.2",
		"inquirer": "^8.1.5",
		"inquirer-file-tree-selection-prompt": "^1.0.12",
		"sade": "^1.7.4"
	},
	"devDependencies": {
		"@types/inquirer": "^8.1.3",
		"@types/node": "^16.10.2",
		"@types/sade": "^1.7.3",
		"nodemon": "^2.0.13",
		"shx": "^0.3.3",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.3"
	}
}
